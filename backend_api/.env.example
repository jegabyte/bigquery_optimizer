# Google Cloud Configuration
GCP_PROJECT_ID=your-project-id
BQ_PROJECT_ID=${GCP_PROJECT_ID}  # Optional: defaults to GCP_PROJECT_ID
FIRESTORE_PROJECT_ID=${GCP_PROJECT_ID}  # Optional: defaults to GCP_PROJECT_ID

# BigQuery Configuration
BQ_DATASET=bq_optimizer
BQ_LOCATION=US

# Firestore Configuration (Optional)
# FIRESTORE_DATABASE=  # Leave empty to use default database

# Application Configuration
APP_ENV=development  # development, staging, production
DEBUG=false

# API Configuration
API_HOST=0.0.0.0
API_PORT=8001

# CORS Configuration (comma-separated origins)
CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# Google Cloud Credentials (Optional - uses Application Default Credentials if not set)
# GOOGLE_APPLICATION_CREDENTIALS=/path/to/service-account.json

# Agent API Configuration
AGENT_API_URL=http://localhost:8080